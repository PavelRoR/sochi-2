#project
	padding 90px 0
	margin-top: 90px
	background-color: #D6DEE0
	background-image: url(../img/backs/project.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 991px)
		padding 20px 0 60px
		background-position: left center
		margin-top: 60px
	@media screen and (max-width 560px)
		padding 0 0 40px
		margin-top 40px
.flowers
	position absolute
	right -70px
	top 100px
	@media screen and (max-width 560px)
		width 120px
		top 60px
		right -40px
	@media screen and (max-width 386px)
		top 80px
		right -80px
.project-img
	position relative
	padding-top: 100%
	img
		position absolute
		top 120px
		left -50px
	@media screen and (max-width 991px)
		padding 0
		img
			position: static
			display block
			width 100%
			max-width 349px
			margin 0 auto 10px
.clouds-projecs
	position relative
	&:before
		content: ''
		position absolute
		width 100%
		height 600px
		left 0
		right 0
		top: -240px
		background-image: url(../img/images/clouds.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
	@media screen and (min-width 1900px)
		&:before
			background-size: 100% 150%