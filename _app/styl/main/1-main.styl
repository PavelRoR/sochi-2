#main
	padding 0 0 40px
	background-color: #62C8D5
	background-image: url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	@media screen and (max-width 991px)
		background-position: center left
		text-align center
	@media screen and (max-width 386px)
		background-position: center
		&:before
			content: ''
			display block
			position absolute
			top 0
			left 0
			right 0
			width 100%
			height 100%
			background-color: rgba(#fff,.8)
.main
	&-title
		font-size: 50px
		font-weight: 900
		color #fff
		line-height: 65px
		@media screen and (max-width 560px)
			font-size: 40px
			line-height: 1.3
		@media screen and (max-width 386px)
			font-size: 36px
			color #000
	&-subtitle
		margin 50px 0 45px
		position relative
		display inline-block
		span
			font-size: 25px
			font-weight: bold
			display inline-block
			background-color: #41990E
			padding 20px 40px 20px 20px
			text-transform uppercase
			color #fff
			border-radius: 8px
			@media screen and (max-width 991px)
				padding 20px 30px
		img
			position absolute
			right -66px
			top -25px
		@media screen and (max-width 560px)
			margin 160px 0 25px
			span
				padding 20px
				font-size: 22px
			img
				top -120px
				left 0
				right 0
				margin 0 auto
		@media screen and (max-width 386px)
			span
				font-size: 18px
	&-text
		font-size: 20px
		font-weight: bold
		margin-bottom: 40px
		@media screen and (max-width 560px)
			font-size: 18px
			margin-bottom: 25px
	&-lasttitle
		position relative
		display inline-block
		margin-top: 30px
		text-align center
		max-width 560px
		span
			display inline-block
			padding 20px 35px
			background-image: url(../img/images/title-2.png)
			background-repeat no-repeat
			background-position: center
			background-size: 100% 100%
			color: #fff
			font-size: 16px
			font-weight: bold
			text-transform uppercase
			position relative
			z-index 10
		img
			position absolute
			right -180px
			top -10px
		@media screen and (max-width 1199px)
			img
				top 5px
		@media screen and (max-width 386px)
			span
				background-image none
				border-radius: 8px
				padding 15px
				background-color: #06192B
				border-radius: 30px 8px
.clouds-main
	position relative
	&:before
		content: ''
		position absolute
		width 100%
		height 600px
		left 0
		right 0
		top: -260px
		background-image: url(../img/images/clouds.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
	@media screen and (min-width 1900px)
		&:before
			top -200px