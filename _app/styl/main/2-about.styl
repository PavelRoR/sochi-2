#about
	padding 100px 0
	background-color: #CCDCE6
	background-image: url(../img/backs/about.png)
	background-repeat: no-repeat
	background-position: center bottom
	background-size: cover
	position relative
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 385px)
		padding 40px 0
.about-container
	position relative
	width 100%
	max-width: 900px;
	margin 0 auto
	border-radius: 40px;
	box-shadow: 0px 0px 47.79px 11.21px rgba(0, 0, 0, 0.06);
	padding 50px 40px 110px
	background-color rgba(#fff, .8)
	text-align center
	@media screen and (max-width 560px)
		padding 30px 20px 60px
	&-img
		position absolute
		&-1
			top -35px
			left -135px
		&-2
			bottom -50px
			left -310px
		&-3
			bottom -75px
			right -75px
		@media screen and (max-width 767px)
			&-1
				left -250px
		@media screen and (max-width 560px)
			&-3
				bottom -120px
		@media screen and (max-width 385px)
			&-1
				left -300px
	&-title
		font-size: 35px
		font-weight: 900
		small
			display block
			font-size: 18px
			font-weight: bold
			text-transform uppercase
		@media screen and (max-width 560px)
			font-size: 30px
			line-height: 1.2
			small
				font-size: 16px
		@media screen and (max-width 385px)
			font-size: 24px
			small
				margin-bottom: 5px
	&-divider
		display block
		margin 25px auto 30px
		width 100%
		max-width 601px
	&-attantion-1
		display inline-block
		padding 30px 35px
		color #fff
		font-size: 25px
		font-weight: 900
		text-transform uppercase
		margin-top: 30px
		border-radius: 40px
		background-color: #000
	&-attantion-2
		display inline-block
		padding 30px 35px
		color #fff
		font-size: 23px
		font-weight: 900
		text-transform uppercase
		background-color: #f20c0c
		position absolute
		bottom -20px
		left 0
		right 0
		margin 0 auto
		border-radius: 40px
		width 100%
		max-width 400px
	@media screen and (max-width 560px)
		&-attantion-1
			padding 20px
			font-size: 20px
		&-attantion-2
			font-size: 18px
			padding 20px
	@media screen and (max-width 385px)
		&-attantion-1
			font-size: 18px
			margin-top: 15px
		&-attantion-2
			font-size: 16px
		
@media screen and (max-width 991px)
	.about-container-text
		margin-bottom: 10px