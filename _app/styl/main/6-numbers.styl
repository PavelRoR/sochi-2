#numbers
	padding 90px 0
	background-image: url(../img/backs/numbers.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.numbers-img
	position relative
	padding-top: 100%
	img
		position absolute
		top 100px
		right -100px
	@media screen and (max-width 991px)
		padding: 0
		img
			position: static
			display block
			width 100%
			max-width 754px
			margin-left: 7%
.numbers-container
	position relative
	&-img
		position absolute
		bottom: 0
		left -76px
.general-wrapper-numbers-2
	position relative
	margin-top: 90px
	left: 60px
	@media screen and (max-width 991px)
		margin-top: 60px
		left 0