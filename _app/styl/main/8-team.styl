#team
	padding 340px 0 90px
	background-image: url(../img/backs/team-clouds.png), url(../img/backs/team.png)
	background-repeat no-repeat, no-repeat
	background-position: center, center bottom
	background-size: contain, contain
	@media screen and (max-width 991px)
		padding 100px 0 0
		background-size: cover, contain
	@media screen and (max-width 560px)
		padding 40px 0 0
.team-title
	text-align center
	font-size: 45px
	font-weight: 900
	margin-bottom: 45px
	@media screen and (max-width 991px)
		font-size: 36px
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom 30px
.general-wrapper-member
	padding 250px 25px 25px
	width 100%
	max-width: 436px;
	margin 110px auto 0
	@media screen and (max-width 386px)
		padding 200px 20px 20px
.member
	position relative
	&-1
		&:before
			content: ''
			display block
			position absolute
			width 253px
			height 155px
			background-color: #000
			border-radius: 8px
			top -70px
			left -100px
	&-3
		&:before
			content: ''
			display block
			position absolute
			width 475px
			height 282px
			background-color: #000
			border-radius: 8px
			right -200px
			bottom -10px
	@media screen and (max-width 991px)
		margin-bottom: 160px
	@media screen and (max-width 560px)
		&&-3
			margin-bottom 60px
	&-img
		display block
		position absolute
		top -110px
		left 0
		right 0
		width 100%
		max-width 312px
		margin 0 auto
		@media screen and (max-width 386px)
			max-width 260px
	&-title
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		text-align center
		padding 10px 40px
		background-image: url(../img/images/title-2.png)
		background-repeat no-repeat
		background-position: center
		background-size: 100% 100%
		position absolute
		left 0
		right 0
		top 155px
		color #fff
		display inline-block
		width 100%
		max-width 312px
		margin 0 auto
		@media screen and (max-width 386px)
			max-width 260px
			font-size: 18px
			padding 10px 20px
			top 110px
	&-list
		li
			list-style: none
			padding-left: 25px
			margin-bottom 25px
			position relative
			&:last-child
				margin-bottom 0
			&:before
				content: ''
				display block
				position absolute
				width 12px
				height: 12px
				border-radius: 50px
				background-color #0f1f2f
				top 8px
				left 0
			@media screen and (max-width 560px)
				margin-bottom 15px