#final
	padding 90px 0 0
	background-color: #132F46
	background-image: url(../img/backs/final.png)
	background-repeat no-repeat
	background-position: center
	background-position: center
	background-size: cover
	@media screen and (max-width 560px)
		padding 60px 0 0
	@media screen and (max-width 385px)
		padding 40px 0 0
.we
	&-info
		padding 25px 25px 40px
		background-color #fff
		border-radius: 8px
		border 2px dashed #BDBDBD
		box-shadow: 0 0 0 12px #fff
		@media screen and (max-width 560px)
			padding 20px 20px 30px
		&-title
			font-size: 30px
			font-weight: 900
			@media screen and (max-width 560px)
				font-size: 26px
		&-text
			font-size: 20px
			font-weight: bold
			margin 50px 0
			@media screen and (max-width 560px)
				font-size: 18px
				margin 30px 0
		&-list
			li
				list-style: none
				padding-left: 25px
				position relative
				margin-bottom: 10px
				&:before
					content ''
					display block
					position absolute
					top 7px
					left 0
					border-radius: 50px
					background-color #0f1f2f
					width 12px
					height: 12px
		&-attantion
			position absolute
			font-size: 20px
			font-weight: bold
			text-transform uppercase
			color #fff
			left 200px
			bottom -40px
			&:before
				content: ''
				display block
				width 110%
				height: 80px
				background-color: #0F1F2F
				border-radius: 8px
				position absolute
				top -10px
				left -20px
				transform: skewX(-10deg)
			span
				position relative
				z-index 10
			@media screen and (max-width 1199px)
				left 90px
			@media screen and (max-width 560px)
				font-size: 18px
				left 10px
				bottom -60px
				background-color: #0F1F2F
				border-radius: 10px
				padding 10px
				text-align center
				width 100%
				left 0
				right 0
				margin 0 auto
				&:before
					content none
			@media screen and (max-width 385px)
				position: static
				margin-top: 30px
	&-img
		position absolute
		right 0
		top 130px
		@media screen and (max-width 991px)
			position: static
			display block
			margin 0 auto 50px
			width 100%
			max-width 643px
.last
	text-align center
	padding: 120px 0 45px
	@media screen and (max-width 560px)
		padding 90px 0 30px
	@media screen and (max-width 385px)
		padding 60px 0 30px
	&-title
		font-size: 45px
		font-weight: 900
		color: #fff
		@media screen and (max-width 991px)
			font-size: 38px
		@media screen and (max-width 560px)
			font-size: 30px
		@media screen and (max-width 385px)
			font-size: 26px
	&-subtitle
		font-size: 30px
		font-weight: bold
		text-transform uppercase
		color #fff
		margin 70px 0 50px
		@media screen and (max-width 991px)
			font-size: 26px
			margin 40px 0
		@media screen and (max-width 560px)
			font-size: 22px
			margin 30px 0
		@media screen and (max-width 385px)
			font-size: 18px
	&-text
		font-size: 20px
		color #fff
		margin-bottom: 25px
		@media screen and (max-width 991px)
			font-size: 18px