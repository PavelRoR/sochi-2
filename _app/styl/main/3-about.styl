#about
	padding 70px 0
	text-align center
	background-color: #E3DA4B
	background-image: url(../img/backs/about.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.about
	&-pre
		font-size: 25px
		font-weight: bold
		text-transform uppercase
	&-title
		font-size: 45px
		font-weight: 900
		margin 40px 0
		line-height: 53px
	&-img
		display block
		width 100%
		max-width 870px
		margin 0 auto
	&-text
		margin 5px 0 25px
		font-size: 34px
		font-weight: bold
		text-transform uppercase
	&-lasttitle
		display inline-block
		color #fff
		text-transform uppercase
		font-size: 20px
		font-weight: bold
		padding 35px 40px
		background-image: url(../img/images/title-2.png)
		background-repeat no-repeat
		background-position: center
		background-size: 100% 100%
		letter-spacing: 2px