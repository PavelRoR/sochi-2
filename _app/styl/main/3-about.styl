#about
	padding 70px 0
	text-align center
	background-color: #E3DA4B
	background-image: url(../img/backs/about.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.about
	&-pre
		font-size: 25px
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 560px)
			font-size: 18px
	&-title
		font-size: 45px
		font-weight: 900
		margin 40px 0
		line-height: 53px
		@media screen and (max-width 991px)
			font-size: 42px
			line-height: 1.3
		@media screen and (max-width 560px)
			font-size: 36px
			margin 30px 0
			br
				display none
		@media screen and (max-width 386px)
			font-size: 28px
	&-img
		display block
		width 100%
		max-width 870px
		margin 0 auto
	&-text
		margin 5px 0 25px
		font-size: 34px
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 1199px)
			br
				display none
		@media screen and (max-width 991px)
			font-size: 28px
		@media screen and (max-width 560px)
			font-size: 24px
		@media screen and (max-width 386px)
			font-size: 20px
	&-lasttitle
		display inline-block
		color #fff
		text-transform uppercase
		font-size: 20px
		font-weight: bold
		padding 35px 40px
		background-image: url(../img/images/title-2.png)
		background-repeat no-repeat
		background-position: center
		background-size: 100% 100%
		letter-spacing: 2px
		@media screen and (max-width 560px)
			font-size: 18px
		@media screen and (max-width 386px)
			font-size: 16px
			background-image none
			border-radius: 30px 8px
			padding 15px
			background-color: #06192B