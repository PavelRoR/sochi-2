#invest
	padding 90px 0 550px
	background-color: #122E46
	background-image: url(../img/backs/invest.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	@media screen and (min-width 2295px)
		padding: 90px 0 600px
	@media screen and (max-width 1199px)
		padding 90px 0 650px
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.request
	text-align center
	color: #fff
	&-title
		font-size: 45px
		font-weight: 900
		@media screen and (max-width 991px)
			font-size: 38px
			line-height: 1.3
			br
				display none
		@media screen and (max-width 560px)
			font-size: 28px
	&-subtitle
		font-size: 30px
		font-weight: bold
		text-transform uppercase
		margin 50px 0
		@media screen and (max-width 991px)
			font-size: 26px
			margin 30px 0
			br
				display none
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-size: 20px
		text-transform uppercase
		@media screen and (max-width 560px)
			font-size: 18px
		&&-bold
			font-size: 23px
			font-weight: 900
			margin 50px 0
			@media screen and (max-width 991px)
				font-size: 22px
				margin 30px 0
			@media screen and (max-width 560px)
				font-size: 20px
.we
	position absolute
	bottom: -160px
	left 0
	right 0
	@media screen and (max-width 991px)
		position static
		margin-top 50px
	&-img
		position absolute
		right -60px
		top 130px
		@media (max-width 1199px)
			right -125px
		@media screen and (max-width 991px)
			position: static
			display block
			margin 0 auto 50px
			width 100%
			max-width 643px
	&-attantion
		position absolute
		padding 30px 50px
		text-align center
		text-transform uppercase
		color #fff
		font-size: 20px
		font-weight: bold
		letter-spacing: 1px
		background-image: url(../img/images/title-2.png)
		background-repeat no-repeat
		background-position: center
		background-size: 100% 100%
		left 130px
		bottom: -75px
		width 100%
		@media screen and (max-width 1199px)
			bottom -110px
		@media screen and (max-width 991px)
			left 0
			bottom -80px
		@media screen and (max-width 560px)
			position: static
			font-size 16px
			padding 25px 30px
			margin-top 20px
		@media screen and (max-width 386px)
			font-size: 16px
			background-image none
			border-radius: 30px 8px
			padding 15px
			background-color: #06192B