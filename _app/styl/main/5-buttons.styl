#our-projects
	padding 80px 0
	background-color: #238A5E
	background-image url(../img/backs/our-projects.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	&:before
	&:after
		content: ''
		display block
		position absolute
		width 100%
		top 10px
		left 0
		right 0
		opacity .26
		height 2px
		border-top: 2px dashed #fff
	&:after
		top auto
		bottom: 10px
	@media screen and (max-width 991px)
		text-align center
		padding 70px 0
	@media screen and (max-width 560px)
		padding 50px 0
.our-projects-title
	font-size: 45px
	font-weight: 900
	color #fff
	margin-bottom: 45px
	line-height: 53px
	@media screen and (max-width 991px)
		font-size: 38px
		line-height: 1.3
		margin-bottom: 30px
	@media screen and (max-width 560px)
		font-size: 32px
	@media screen and (max-width 386px)
		font-size: 28px
.button-our-projects
	width 100%
	max-width 320px
	@media screen and (max-width 991px)
		margin-bottom: 30px
.our-projects-img
	display block
	width 100%
	max-width 413px
	margin 30px auto 0