.button
	display inline-block
	padding 18px 20px
	color #fff
	font-family: M
	font-weight: normal
	font-size: 16px
	text-align center
	background-color #cc922f
	position relative
	border-radius: 7px;
	box-shadow: 0 -2px 0 0 #f7f3aa, 0 2px 0 0 #a47320
	width auto
	min-width 220px
	position relative
	z-index 99
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
		background-color: #cc922f
	&:hover
		text-decoration none
		color #fff
		background-color: #cc922f - 25%
		box-shadow: inset 0 0 0 0 #f7f3aa, 0 0 0 0 #a47320
	&-wrapper
		position relative
		&-center
			text-align center
.general-wrapper
	padding 35px 20px
	border-radius: 8px
	border 2px dashed #BDBDBD
	box-shadow: 0 0 0 12px #fff
	background-color #fff
	box-shadow: 0 0 0 10px #fff, 0px 3px 46.92px 4.08px rgba(0, 0, 0, 0.22);
	position relative
	z-index 30
	@media screen and (max-width 560px)
		padding 20px
	&-title
		font-size: 30px
		font-weight: 900
		margin-bottom: 40px
		@media screen and (max-width 991px)
			br
				display none
		@media screen and (max-width 560px)
			font-size: 24px
			margin-bottom 25px
	&-subtitle
		font-size: 20px
		font-weight: bold
		margin  0 0 30px
		@media screen and (max-width 560px)
			margin 0 0 20px
	&-list
		li
			list-style: none
			padding-left: 25px
			margin-bottom 10px
			position relative
			&:last-child
				margin-bottom 0
			&:before
				content: ''
				display block
				position absolute
				width 12px
				height: 12px
				border-radius: 50px
				background-color #0f1f2f
				top 8px
				left 0
			@media screen and (min-width 2295px)
				br
					display none
			@media screen and (max-width 560px)
				margin-bottom 15px
	&-text
		margin-top: 20px
		@media screen and (min-width 2295px)
			br
				display none
		@media screen and (max-width 1199px)
			br
				display none
		@media screen and (max-width 560px)
			margin-top 10px